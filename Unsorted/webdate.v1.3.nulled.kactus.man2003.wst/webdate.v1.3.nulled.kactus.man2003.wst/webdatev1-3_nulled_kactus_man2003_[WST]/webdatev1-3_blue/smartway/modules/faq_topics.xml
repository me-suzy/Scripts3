<xml>
	<main_table>dt_faq</main_table>
	<name>FAQ Topics</name>
	<options>
		<opt name="create_record" type="always"></opt>
		<opt name="search" type="sometimes"></opt>
		<opt name="main_view" type="always"></opt>
	</options>
	<view>
		<vcol name="bd_counter">#</vcol>
		<vcol name="name">Topic</vcol>
		<vcol name="show_it" type="yes_no">Show on Site</vcol>
	</view>
	<edit>
		<ecol name="name" type="string">Name</ecol>
		<ecol name="show_it" type="yes_no">Show on Site</ecol>
	</edit>
	<sql_actions>
		<opt name="order" val="name"></opt>
		<opt name="search_by" type="name"></opt>
	</sql_actions>
</xml>
